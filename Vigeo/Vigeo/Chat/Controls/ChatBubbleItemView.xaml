<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="Vigeo.Controls.ChatBubbleItemView"
		xmlns:controls="clr-namespace:Vigeo.Controls"
		xmlns:local="clr-namespace:Vigeo"
		Padding="10">
	<ContentView.Content>
		<StackLayout Orientation="Horizontal" BackgroundColor="Color.Black">
			<Label TextColor="#FFFFFF" FontSize="18" Text="{Binding text}" HorizontalOptions="FillAndExpand" />
      <Label
				HorizontalOptions="EndAndExpand"
				FontSize ="12"
				TextColor="#FFFFFF"
				HorizontalTextAlignment="Start"
				VerticalTextAlignment="Center"
				Text="Date" />
		</StackLayout>
	</ContentView.Content>
</ContentView>
